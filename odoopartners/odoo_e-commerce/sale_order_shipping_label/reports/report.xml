<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_report_sale_order_shipping" model="report.paperformat">
        <field name="name">Sale order shipping Paperformat</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">280</field>
        <field name="page_width">216</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">8</field>
        <field name="margin_bottom">8</field>
        <field name="margin_left">6</field>
        <field name="margin_right">6</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>
    <record id="action_holiday_sale_report" model="ir.actions.report">
        <field name="name">Etiqueta Carta x2</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sale_order_shipping_label.print_sale_order_shipping</field>
        <field name="report_file">sale_order_shipping_label.print_sale_order_shipping</field>
        <field name="print_report_name">'Etiqueta Carta x2 - %s' % (object.name)</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="sale_order_shipping_label.paperformat_report_sale_order_shipping"/>
    </record>
</odoo>