<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="hide_checkout_fields_inherit_address" inherit_id="website_sale.address" active="True" customize_show="True" name="Hide checkout fields billing address">
        <xpath expr="//input[@id='shipping_use_same']/parent::label/parent::div/parent::div/parent::t" position="attributes">
            <attribute name="t-if">
                mode == ('new', 'billing') and \
                not only_services and \
                not website.use_billing_delivery_address
            </attribute>
        </xpath>
    </template>

    <template id="hide_checkout_fields_company_vat_inherit_address" inherit_id="website_sale.address_b2b" active="True" customize_show="True" name="Hide checkout fields company, vat">
        <xpath expr="//label[@for='company_name']/parent::div/parent::t" position="attributes">
            <attribute name="t-if">
                website.use_billing_company
            </attribute>
        </xpath>

        <xpath expr="//label[@for='vat']/parent::div" position="attributes">
            <attribute name="t-if">
                website.use_billing_vat
            </attribute>
        </xpath>
    </template>

</odoo>