<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="checkout_observations" inherit_id="payment.payment_tokens_list">
        <xpath expr="//form//div[@class='card']" position="after">
            <div class="mt24 mb24" name="observations">
                <div class="form-group">
                    <h3 class="mb24">Observations</h3>
                    <textarea class="form-control" style="max-height: 380px; min-height: 100px" id="checkout_observations" placeholder="Write an observation ..."/>
                </div>
            </div>
        </xpath>
    </template>
</odoo>