<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_view_inherit_observations_checkout" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit.observations.checkout</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='customer_signature']" position="after">
                <page string="Observations" name="observations">
                    <group>
                        <field name="checkout_observations"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>