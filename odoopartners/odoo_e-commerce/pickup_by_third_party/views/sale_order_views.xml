<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_view_inherit_pickup_by_third_party" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit.pickup.by.third.party</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="third_party_name" attrs="{'invisible': [('allow_third_party','=', False)]}"/>
                <field name="third_party_lastname" attrs="{'invisible': [('allow_third_party','=', False)]}"/>
                <field name="third_party_lastname2" attrs="{'invisible': [('allow_third_party','=', False)]}"/>
                <field name="third_party_name_vat" attrs="{'invisible': [('allow_third_party','=', False)]}"/>
                <field name="allow_third_party" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>