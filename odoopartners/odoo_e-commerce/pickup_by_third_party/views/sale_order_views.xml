<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_view_inherit_pickup_by_third_party" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit.pickup.by.third.party</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <div>
                    <br/>
                    <b>Quien retira?</b>
                </div>
                <field name="third_party_name"/>
                <field name="third_party_lastname"/>
                <field name="third_party_lastname2"/>
                <field name="third_party_name_vat"/>
            </xpath>
        </field>
    </record>
</odoo>