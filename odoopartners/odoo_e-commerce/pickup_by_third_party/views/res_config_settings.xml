<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_form_view_inherit_pickup_by_third_party" model="ir.ui.view">
        <field name="name">res.config.settings.form.view.inherit.pickup.by.third.party</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='delivery_method_setting']" position="inside">
                <br/>
                <div attrs="{'invisible': [('module_website_sale_delivery', '=', False)]}">
                    <div class="o_setting_left_pane">
                        <field name="allow_third_party"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label string="Allow Third Party Withdrawal" for="allow_third_party"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>